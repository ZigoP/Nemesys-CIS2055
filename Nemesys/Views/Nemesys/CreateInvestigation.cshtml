@namespace Nemesys.ViewModels
@model CreateInvestigationViewModel

@{
    ViewData["Title"] = "Create Investigation";
}

<h2>Create an Investigation</h2>

<form asp-action="CreateInvestigation" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="ReportId" type="hidden" class="form-control" />
    
    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="Status"
                    asp-items="@(new SelectList(Model.Statuses))">
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Create Investigation" />
        </div>
    </div>
</form>

<a asp-controller="Nemesys" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>

@*Inject JQuery validation scripts in Layout*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
